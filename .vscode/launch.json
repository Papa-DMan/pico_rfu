    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pico Debug",
            "cwd": "${workspaceFolder}",
            "executable": "./build/ProjectFiles/Pico_RFU.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "servertype": "openocd",
            "device": "RP2040",
            "armToolchainPath": "/usr/bin",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "svdFile": "/mnt/c/Users/mahan/Documents/git/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "preResetCommands": [
                "program ${workspaceFolder}/build/ProjectFiles/Pico_RFU.elf verify reset exit"
            ],
            "postRestartCommands": [
                "continue"
            ],
            "searchDir": ["/usr/share/openocd/scripts"],
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            }
        }
    ]
}